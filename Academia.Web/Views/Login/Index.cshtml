@model Academia.Web.ViewModels.LoginViewModel

<h2>Login</h2>

<form method="post">
    <div>
        <label>E-mail</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div>
        <label>Senha</label>
        <input asp-for="Senha" type="password" class="form-control" />
    </div>

    <br />
    <button class="btn btn-primary">Entrar</button>

    @if (ViewBag.Erro != null)
    {
        <p style="color:red">@ViewBag.Erro</p>
    }
</form>
