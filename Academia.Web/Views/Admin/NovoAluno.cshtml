@{
    Layout = "_AdminLayout";
}

<h2>Novo Aluno</h2>

<form method="post" action="/Admin/SalvarAluno">
    <div class="mb-3">
        <label>Nome</label>
        <input name="Nome" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>E-mail</label>
        <input name="Email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Idade</label>
        <input name="Idade" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Objetivo</label>
        <input name="Objetivo" class="form-control" required />
    </div>

    <button class="btn btn-success">Salvar</button>
</form>
